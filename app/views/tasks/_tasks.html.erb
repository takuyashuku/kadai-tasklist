<ul class="list-unstyled">
  <% tasks.each do |task| %>

    <li class="media mb-3">
      <img class="mr-2 rounded" src="
      <%= gravatar_url(task.user, { size: 50 }) %>
      " alt="">
      
      <div class="media-body">
        <div>
          @<%= task.user.name %>
          <span class="text-muted">
              登録日時 <%= task.created_at %>
          </span>
        </div>
        <div>
            <p>
                タスク：<%= task.content %>
            </p>
            <p>
                ステータス：<%= task.status%>
            </p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to'編集',edit_task_path(task), class: 'btn btn-light' %>
            <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除してもいいですか？" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>